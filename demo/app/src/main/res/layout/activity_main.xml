<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="link"
        android:text="linkDemo"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_p2p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="p2p"
        android:text="P2PDemo"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_link"/>

    <Button
        android:id="@+id/btn_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="media"
        android:text="MediaDemo"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_p2p"/>

</android.support.constraint.ConstraintLayout>